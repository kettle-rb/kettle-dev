#!/usr/bin/env ruby
# frozen_string_literal: true

# vim: set syntax=ruby

# Immediate, unbuffered output
$stdout.sync = true
# Ensure bundler is set up by the host project
require "bundler/setup"

begin
  require "kettle/dev/readme_backers"
rescue LoadError => e
  warn("kettle-readme-backers: failed to load kettle/dev/readme_backers: #{e.message}")
  warn("Hint: Ensure the host project includes kettle-dev and run bundle install.")
  exit(1)
end

Kettle::Dev::ReadmeBackers.new.run!
